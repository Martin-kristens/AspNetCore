@model SwitchBlackAndWhiteViewModel

<section id="switch-black-white" class="switch-black-white">
    <div class="dark-theme"></div>
    <div class="light-theme"></div>
    <div class="container">
        <h2><span>@Model.Title</span></h2>
        <div class="switch-black-white-laptop">
            @if (Model.Image != null)
            {
                foreach (var img in Model.Image)
                {
                    <img src="@img.ImageUrl" alt="@img.AltText">
                }
            }
        
        </div>
    </div>
</section> 